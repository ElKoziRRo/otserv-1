dnl Process this file with autoconf to produce a configure script.
AC_INIT(opentserv, 0.2, opentserv@youdie.de)
AC_CONFIG_SRCDIR([creature.h])
AC_CONFIG_AUX_DIR(config)
AC_CANONICAL_SYSTEM
dnl AC_CONFIG_HEADER([config.h])

# check if we want debuging
AC_SUBST(DEBUG)
AC_ARG_WITH(debug,   --with-debug      enable debuging, DEBUG=-DDEBUG)

# Checks for programs.
AC_PROG_CXX
AC_LANG_CPLUSPLUS
AC_EXEEXT
AC_OBJEXT
AC_PROG_CC
AC_PROG_INSTALL

# Checks for libraries.

# check if we use mingw or unix...
case "$host" in
*mingw* | *win*) target_sys=__WINDOWS__; LDFLAGS=$LDFLAGS" -lwsock32 ";;
*) target_sys=__LINUX__;;
esac
AC_SUBST(target_sys)

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([arpa/inet.h errno.h fcntl.h netdb.h netinet/in.h stdlib.h string.h strings.h sys/socket.h sys/time.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T
AC_HEADER_TIME

# Checks for library functions.
AC_CHECK_FUNCS([gethostbyname inet_ntoa memset select socket strtol])

AC_CONFIG_FILES([Makefile])
AC_OUTPUT
